        <div class="card-content">
            <h2 class="card-title text-white text-2xl font-bold mb-4">Hasil :</h2>
            <textarea readonly id="hasil" name="hasil" rows="23" class="bg-black w-full p-4" style="border: 1px solid white;"></textarea>
        </div>
