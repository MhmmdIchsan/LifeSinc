<script>
    document.getElementById('submitBtn').addEventListener('click', function() {
        var berat = parseFloat(document.getElementById('beratTubuh').value);
        var tinggi = parseFloat(document.getElementById('tinggiTubuh').value);
        
        if (isNaN(berat) || isNaN(tinggi) || tinggi <= 0) {
            alert("Masukkan nilai berat dan tinggi yang valid.");
            return;
        }
    
        var bmi = berat / (tinggi * tinggi);
        var kategori, deskripsi, risiko, rekomendasi;

        if (bmi < 18.5) {
            kategori = "Berat Badan Kurang";
            deskripsi = "Berat badan kurang menunjukkan bahwa seseorang memiliki berat badan yang lebih rendah dari yang dianggap sehat untuk tinggi badannya.";
            risiko = "Risiko Kesehatan:\n- Kekurangan gizi\n- Kekurangan vitamin dan mineral\n- Osteoporosis dan peningkatan risiko patah tulang\n- Masalah kesuburan\n- Sistem kekebalan tubuh yang lemah, meningkatkan risiko infeksi\n- Anemia";
            rekomendasi = "Rekomendasi Medis: Seseorang dengan berat badan kurang harus berbicara dengan profesional kesehatan untuk memastikan mereka mendapatkan nutrisi yang cukup dan mempertimbangkan perubahan diet atau pola makan untuk mencapai berat badan yang sehat.";
        } else if (bmi >= 18.5 && bmi <= 24.9) {
            kategori = "Berat Badan Normal";
            deskripsi = "Berat badan normal menunjukkan bahwa seseorang memiliki berat badan yang dianggap sehat untuk tinggi badannya.";
            risiko = "Risiko Kesehatan: Orang dalam kategori ini umumnya memiliki risiko lebih rendah untuk masalah kesehatan yang terkait dengan berat badan, seperti penyakit jantung, diabetes tipe 2, dan tekanan darah tinggi.";
            rekomendasi = "Rekomendasi Medis: Tetap menjaga pola makan seimbang dan aktif secara fisik untuk mempertahankan berat badan sehat.";
        } else if (bmi >= 25.0 && bmi <= 29.9) {
            kategori = "Berat Badan Berlebih";
            deskripsi = "Berat badan berlebih menunjukkan bahwa seseorang memiliki berat badan yang lebih tinggi dari yang dianggap sehat untuk tinggi badannya.";
            risiko = "Risiko Kesehatan:\n- Peningkatan risiko penyakit jantung dan stroke\n- Diabetes tipe 2\n- Hipertensi (tekanan darah tinggi)\n- Sleep apnea dan masalah pernapasan lainnya\n- Osteoarthritis\n- Masalah ginjal";
            rekomendasi = "Rekomendasi Medis: Mengadopsi gaya hidup sehat melalui diet seimbang dan rutin berolahraga. Konsultasi dengan profesional kesehatan dapat membantu dalam merancang program penurunan berat badan yang aman dan efektif.";
        } else if (bmi >= 30.0) {
            kategori = "Obesitas";
            deskripsi = "Obesitas menunjukkan bahwa seseorang memiliki berat badan yang jauh lebih tinggi dari yang dianggap sehat untuk tinggi badannya.";
            risiko = "Risiko Kesehatan:\n- Penyakit jantung dan stroke\n- Diabetes tipe 2\n- Beberapa jenis kanker (misalnya, kanker payudara, usus besar, dan endometrium)\n- Hipertensi\n- Sleep apnea\n- Osteoarthritis\n- Penyakit hati berlemak\n- Penyakit ginjal";
            rekomendasi = "Rekomendasi Medis: Penting untuk mencari bantuan dari profesional kesehatan untuk mengembangkan rencana penurunan berat badan yang aman dan efektif. Ini mungkin melibatkan perubahan diet, peningkatan aktivitas fisik, dan mungkin intervensi medis atau bedah dalam kasus-kasus tertentu.";
        }

        document.getElementById('hasil').value = "Indeks Massa Tubuh (BMI): " + bmi.toFixed(2) + "\nKategori: " + kategori + "\n\nDeskripsi: " + deskripsi + "\n\n" + risiko + "\n\n" + rekomendasi;
    });
</script>

